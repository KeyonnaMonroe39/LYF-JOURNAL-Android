<resources>
    <!-- Base application theme. -->
    <style name="Theme.LyfJournal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_purple_500_color_code</item>
        <item name="colorPrimaryVariant">@color/material_purple_700_color_code</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_teal_200_color_code</item>
        <item name="colorSecondaryVariant">@color/material_teal_700_color_code</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
